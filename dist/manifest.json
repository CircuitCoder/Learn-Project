{
	"name": "Learn Helper",
	"version": "4.1.3",
	"minimum_chrome_version": "55",
	"manifest_version": 2,
	"description": "清华大学网络学堂助手，集中展示课程公告、作业、DDL等信息，提供一站式服务",
	"content_scripts": [],
	"background": {
        "scripts": [
			"browser-polyfill.min.js",
			"background.js"
		],
        "persistent": true
	},
	"permissions": [
		"storage",
		"tabs",
		"downloads",
        "cookies",
        "webRequest",
        "webRequestBlocking",
		"https://learn.tsinghua.edu.cn/*",
		"https://learn2018.tsinghua.edu.cn/*",
		"https://id.tsinghua.edu.cn/*"
	],
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"browser_action": {
		"default_icon": "icons/19.png",
		"default_title": "Learn Helper"
	}
}
