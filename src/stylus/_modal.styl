$modal-heading = #DDD

.ng-modal-overlay {
  /* A dark translucent div that covers the whole screen */
  position:absolute;
  z-index:9999;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color:#000000;
  opacity: 0.8;
}
.ng-modal-dialog
  z-index 10000
  position absolute
  width 50%
  top 50%
  left 50%
  transform translate(-50%, -50%)

  background lighten($modal-heading, 50%)
  if not $theme-flat
    border 1px solid darken($modal-heading, 10%)
  border-radius 3px
  box-shadow: 4px 4px 80px #000;

  .ng-modal-heading
    clearfix()
    if $theme-flat
      background $modal-heading
      border-bottom 1px solid darken($modal-heading, 30%)
    else
      background linear-gradient(lighten($modal-heading, 30%), $modal-heading)
      box-shadow inset 0  1px 0 lighten($modal-heading, 60%), \
                 inset 0 -1px 0 darken($modal-heading, 20%)
      border-bottom 1px solid lighten($modal-heading, 30%)
    line-height 40px

    h3
      margin 0
      padding 0 0 0 10px
      font-size 18px
      text-align center
      if not $theme-flat
        text-shadow 0 -1px 0 lighten($modal-heading, 40%)

      color darken($modal-heading, 60%)

    .ng-modal-close
      float right
      color darken($modal-heading, 20%)
      cursor pointer
      background darken($modal-heading, 40%)
      if not $theme-flat
        box-shadow inset 0 0px 2px darken($modal-heading, 40%), \
                         0 0px 2px lighten($modal-heading, 20%)
      border-radius 50%
      width 20px
      margin 10px 10px 0 0
      height @width
      text-align center
      line-height @height
      display inline-block

      &:hover
        color lighten($modal-heading, 60%)

.ng-modal-dialog-content
  padding 10px
  .form-styled
    .field
      margin: 0 auto;
    input
      box-sizing border-box
      width 100%
      padding 10px
